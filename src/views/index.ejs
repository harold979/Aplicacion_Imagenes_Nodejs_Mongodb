<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Images</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
  </head>
  <style>
    .size_img {
      width: 100%;
      height: 100%;
    }

    .tamano {
      gap: 2rem;
    }

    .espacio {
      padding: 1rem;
    }
  </style>
  <body>
    <%- include("partials/navigation") %>
    <div class="container p-4">
      <div class="row tamano">
        <% images.forEach(function(image){ %>
        <div
          class="card espacio animate__animated animate__bounce"
          style="width: 350px"
        >
          <img class="size_img" src="<%= image.path %>" alt="Card image cap" />
          <div class="card-body">
            <h5 class="card-title"><%= image.title %></h5>
            <p class="card-text"><%= image.description %>.</p>
            <p class="card-text"><%= format(image.created_at) %>.</p>
            <a href="image/<%= image._id %>" class="btn btn-primary"
              >View Details</a
            >
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
